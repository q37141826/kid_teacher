<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white_line"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/re_task_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/textpadding"
        android:layout_marginLeft="@dimen/textpadding"
        android:layout_marginRight="@dimen/textpadding"
        android:layout_marginTop="@dimen/textpadding"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/textpadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_second_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/textmarginleft"
                android:text="二年级7班"
                android:textSize="@dimen/text18"/>

            <TextView
                android:id="@+id/task_second_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/textmarginleft"
                android:drawablePadding="@dimen/textmarginleft"
                android:padding="@dimen/textmarginleft"
                android:text="截止时间：12月20号 14:00"
                android:textSize="@dimen/text13"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_second_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="内容：Unit1 First to school"
                android:textColor="@color/black"
                android:textSize="@dimen/text18"/>

            <TextView
                android:id="@+id/test_second_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/textmarginleft"
                android:drawablePadding="@dimen/textmarginleft"
                android:drawableRight="@drawable/ico_to"
                android:textSize="@dimen/text18"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_second_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="完成: 2/3"
                android:textColor="@color/black"
                android:textSize="@dimen/text14"/>
        </LinearLayout>
    </LinearLayout>

    <!--<View-->
    <!--android:id="@+id/textline"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/textline"-->
    <!--android:layout_marginLeft="@dimen/textmarginleft"-->
    <!--android:background="@color/blue_line"/>-->

</LinearLayout>