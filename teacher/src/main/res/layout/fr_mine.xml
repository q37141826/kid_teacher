<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_line"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView-->
        <!--android:id="@+id/ib_bg"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="220dp"-->
        <!--android:background="@drawable/ico_index_bg"/>-->

        <RelativeLayout
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/img_edit"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_portrait"
                android:padding="10dp"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/tv_campus_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="4dp"
                android:drawablePadding="5dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp"

                />

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:padding="4dp"
                android:src="@drawable/ic_launcher"/>


        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/tvMyclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:padding="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ico_set_gy"
            android:text="@string/mine_my_class"
            android:textSize="@dimen/text18"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ico_to"
            android:text="@string/mine_wait_add_class"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"/>

    <RelativeLayout
        android:id="@+id/tvWaitaddclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ico_set_gy"
            android:text="@string/mine_wait_add_class"
            android:textSize="@dimen/text18"/>

        <TextView
            android:id="@+id/tv_waitaddclassconut"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_toLeftOf="@+id/nextmyclass"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/nextmyclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ico_to"
            android:text="@string/mine_wait_add_class"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tvNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ico_set_gy"
            android:text="@string/mine_notice"
            android:textSize="@dimen/text18"/>

        <TextView
            android:id="@+id/tv_noticecount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_toLeftOf="@+id/nextnotice"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/nextnotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ico_to"
            android:text="@string/mine_wait_add_class"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tvAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ico_set_gy"
            android:text="@string/mine_text_about"
            android:textSize="@dimen/text18"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ico_to"
            android:text="@string/mine_wait_add_class"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"/>

    <RelativeLayout
        android:id="@+id/tvSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ico_set_gy"
            android:text="@string/mine_setting"
            android:textSize="@dimen/text18"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ico_to"
            android:text="@string/mine_wait_add_class"/>
    </RelativeLayout>


</LinearLayout>


