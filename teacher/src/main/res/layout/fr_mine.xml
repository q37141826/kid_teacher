    <RelativeLayout
        android:id="@+id/tvWaitaddclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ico_pending_student"
            android:drawablePadding="10dp"
            android:text="@string/mine_wait_add_class"
            android:textColor="@color/black_tv_3"
            android:textSize="@dimen/text18" />

        <TextView
            android:id="@+id/tv_waitaddclassconut"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_toLeftOf="@+id/nextmyclass"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/nextmyclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/go_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/textpadding"
        android:layout_marginRight="@dimen/textpadding"
        android:background="@color/list_divider_color_gravy"
        android:text="" />

    <RelativeLayout
        android:id="@+id/tvNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ico_notice"
            android:drawablePadding="10dp"
            android:text="@string/mine_notice"
            android:textColor="@color/black_tv_3"
            android:textSize="@dimen/text18" />

        <TextView
            android:id="@+id/tv_noticecount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_toLeftOf="@+id/nextnotice"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/nextnotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/go_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/textpadding"
        android:layout_marginRight="@dimen/textpadding"
        android:background="@color/list_divider_color_gravy"
        android:text="" />

    <RelativeLayout
        android:id="@+id/tvAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ico_about"
            android:drawablePadding="10dp"
            android:text="@string/mine_text_about"
            android:textColor="@color/black_tv_3"
            android:textSize="@dimen/text18" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/go_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/textpadding"
        android:layout_marginRight="@dimen/textpadding"
        android:background="@color/list_divider_color_gravy"
        android:text="" />

    <RelativeLayout
        android:id="@+id/tvSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ico_setting"
            android:drawablePadding="10dp"
            android:text="@string/mine_setting"
            android:textColor="@color/black_tv_3"
            android:textSize="@dimen/text18" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="10dp"
            android:src="@drawable/go_right" />
    </RelativeLayout>


</LinearLayout>


