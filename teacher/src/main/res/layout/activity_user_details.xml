<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/layout_tool_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray2"
        android:text=""/>

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/white">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/re_user_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_user_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/tv_user_icon"
                    android:textColor="@color/black_tv_3"
                    android:textSize="@dimen/text18"/>

                <ImageView
                    android:id="@+id/img_user_icon_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/textmarginleft"
                    android:background="@drawable/go_right"/>

                <ImageView
                    android:id="@+id/img_user_icon"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_toLeftOf="@+id/img_user_icon_to"
                    android:padding="10dp"
                    android:src="@drawable/ico_default_user"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/textpadding"
                android:layout_marginRight="@dimen/textpadding"
                android:background="@color/list_divider_color_gravy"
                android:text=""/>

            <RelativeLayout
                android:id="@+id/re_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:padding="@dimen/textmarginleft"
                    android:text="@string/tv_user_name"
                    android:textColor="@color/black_tv_3"
                    android:textSize="@dimen/text18"/>

                <EditText
                    android:id="@+id/tv_user_name_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/go_right"
                    android:lineSpacingExtra="8dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="@dimen/textmarginleft"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/sp_while"
                    android:textSize="@dimen/text16"/>

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/textmarginleft"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_user_name_right"
                    android:layout_centerHorizontal="true"
                    android:background="@color/list_divider_color_gravy"
                    android:text=""/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_user_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/sex"
                    android:textColor="@color/black_tv_3"
                    android:textSize="@dimen/text18"/>

                <TextView
                    android:id="@+id/tv_user_sex_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/textmarginleft"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/go_right"
                    android:textColor="@color/black_tv_6"
                    android:textSize="@dimen/text16"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/textpadding"
                android:layout_marginRight="@dimen/textpadding"
                android:background="@color/list_divider_color_gravy"
                android:text=""/>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="生日"
                    android:textColor="@color/black_tv_3"
                    android:textSize="@dimen/text18"/>


                <TextView
                    android:id="@+id/tv_user_birthday_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/textmarginleft"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/go_right"
                    android:textColor="@color/black_tv_6"
                    android:textSize="@dimen/text16"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/textpadding"
                android:layout_marginRight="@dimen/textpadding"
                android:background="@color/list_divider_color_gravy"
                android:text=""/>

            <RelativeLayout
                android:id="@+id/re_user_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/tv_user_school"
                    android:textColor="@color/black_tv_3"
                    android:textSize="@dimen/text18"/>

                <TextView
                    android:id="@+id/tv_user_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/go_right"
                    android:padding="@dimen/textmarginleft"
                    android:text="魔耳学校"
                    android:textColor="@color/black_tv_6"
                    android:textSize="@dimen/text16"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/textpadding"
                android:layout_marginRight="@dimen/textpadding"
                android:background="@color/list_divider_color_gravy"
                android:text=""/>

        </LinearLayout>


    <!--</ScrollView>-->

</LinearLayout>
